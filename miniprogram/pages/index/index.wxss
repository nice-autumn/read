/* pages/index/index.wxss */
.mine{
  width: 100%;
  height: 100vh;
  background-color: #fff;
}
.mine-nav {
  position: relative;
  height: 50%;
   text-align: center;
}
.mine-box{
  content: '';
  width: 170%;
  padding: 100rpx 0;
  position: absolute;
  left: -34%;
  top: 0;
  border-radius: 0 0 70% 70%;
  background:-webkit-linear-gradient(top,rgb(255,248,255),rgb(234,254,255));
}
.mine-box image{
  width: 12%;
  margin-top: 40rpx;
  border: 2px solid #000;
  border-radius: 50% ;
}
.mine-box text{
  display: block;
  font-size: 34rpx;
  margin-top: 20rpx;
  font-weight: 600;
  color: #42C6D5;
}
.login-list{
  display: flex;
  justify-content: space-between;
  padding:30rpx 30px 40rpx 30rpx;
  border-bottom: 1px solid #eee;
}
.login-list .page{
  margin-left: 60rpx;
  font-size: 34rpx;
  color: #999;
}
.login-list image{
  margin-top: 14rpx;
  width: 30rpx;
}
