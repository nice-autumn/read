/* pages/listen/listen.wxss */
.listen{
  background-color: #fff;
}
.lis-content{
  padding: 0 40rpx;
}
.lis-title{
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 20rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}
.video{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.video-img{
  position: relative;
}
.video-img image{
  width: 140rpx;
}
.video-img .img-play{
  position: absolute;
  top: 50rpx;
  left: 30rpx;
  width: 80rpx;
  opacity: .7;
}
.video-title{
  padding:0 20rpx;
   width: 80%;
}
.video-title text{
  display: block;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.video-title  .names{
  font-size: 34rpx;
  font-weight:bold;
}
.video-title .author{
  font-size: 30rpx;
  color: rgb(160, 158, 158);
}
.video-title .people{
  font-size: 28rpx;
  color: rgb(207, 204, 204);
}
