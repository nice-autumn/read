/* components/good/good.wxss */
.good{
  width: 100%;
  height: 100vh;
  background-color: #fff;
}
.good-list{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.good-num{
  font-size: 36rpx;
  font-weight: bold;
  line-height: 190rpx;
}
.good-intro{
  display: flex;
  margin-left: 30rpx;
}
.good-intro image{
   width: 160rpx;
   margin-left: 30rpx;
}
.good-con{
  width: 60%;
 margin-left: 30rpx;
}
.good-con text{
  line-height: 66rpx;
  display: block;
}
.good-title{
  font-size: 34rpx;
  font-weight: bold;
  white-space: wrap;
}
.good-author{
  font-size: 30rpx;
  color: #999;
}
.good-con .pre{
  font-size: 26rpx;
  color: #999;
}
.people{
  display: flex;
  height: 36rpx;
  margin-top: 10rpx;
  padding: 4rpx 10rpx;
  text-align: center;
  border-radius: 40rpx;
  border:1px solid #eee;
  background-color: #eee;
}
.people image{
  width: 30rpx;
}
.people-num{
  font-size: 24rpx;
  color: #999;
}